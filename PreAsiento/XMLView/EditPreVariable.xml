<view>
    <columns>
        <group name="detail">
            <column name="idpreasiento" order="100" display="none">
                <widget type="text" fieldname="idpreasiento" />
            </column>
            <column name="id" order="100" display="none">
                <widget type="text" fieldname="idprevariable" />
            </column>
            <column name="Código" numcolumns="1" order="100">
                <widget type="text" fieldname="codprevariable" required="true" readonly="true" />
            </column>
            <column name="Tipo" numcolumns="1" order="110">
                <widget type="text" fieldname="tipoprevariable" required="true" readonly="true" />
            </column>
            <column name="Mensaje" order="130">
                <widget type="text" fieldname="mensaje" required="true" />
            </column>
        </group>
    </columns>
</view>
